<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/ColorBackground">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="17dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select a category to add to your tabs"
        android:id="@+id/event_description"
        android:background="@color/ColorPrimary"
        android:textColor="#FFFFFF"
        android:gravity="center" />
    <CheckBox
        android:drawableRight="@drawable/ic_evt"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Type"
        android:button="@drawable/check_box_selector"
        android:id="@+id/select_type"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:clickable="true" />
    <CheckBox
        android:drawableRight="@drawable/ic_date"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Date"
        android:button="@drawable/check_box_selector"
        android:id="@+id/select_date"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:clickable="true" />
    <CheckBox
        android:drawableRight="@drawable/ic_map"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Map"
        android:button="@drawable/check_box_selector"
        android:id="@+id/select_map"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        />


    <CheckBox
        android:drawableRight="@drawable/ic_transp"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Transport"
        android:button="@drawable/check_box_selector"
        android:id="@+id/select_transp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        />

    <Button
        android:background="@drawable/btn_round_corner"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btn_events_update"
        android:text="@string/btn_events_add"
        android:textColor="#ffffffff"
        android:textSize="25dp"

        android:layout_alignRight="@+id/ListView"

        android:layout_marginTop="20dp"
        android:layout_gravity="right" />


</LinearLayout>