<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".FriendsActivity"
        android:background="#FFFFFF">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="All"
            android:id="@+id/btn_friends_all"
            android:background="#ff08ae9e"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_friends_groups"
            android:layout_toStartOf="@+id/btn_friends_groups"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Groups"
            android:id="@+id/btn_friends_groups"
            android:background="#ffb2b2b2"
            android:textColor="#ffffffff"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="28dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_friends_add"
            android:layout_toStartOf="@+id/btn_friends_add"
            android:layout_marginBottom="10dp" />

        <Button
            android:background="@drawable/btn_round_corner"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_friends_add"
            android:text="@string/btn_friends_add"
            android:textColor="#ffffffff"
            android:textSize="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/list"
            android:layout_alignEnd="@+id/list"
            android:layout_marginTop="0dp" />

        <nf28.weevent.Controller.List.ActionSlideExpandableListView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/list"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_friends_all"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <!-- Side navigation drawer UI -->


</android.support.v4.widget.DrawerLayout>